<Window x:Class="Merch_1._0.Highscore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Merch_1._0"
        mc:Ignorable="d"
        Title="Highscore" Height="1080" Width="1920">
    <Canvas Background="Orange">
        <Label Canvas.Left="621" Canvas.Top="58" FontSize="120" Background="{x:Null}" Foreground="White" FontWeight="Bold">High Scores</Label>
        
        
        <!-- Quitbtn hitbox moet nog aangepast worden-->
        <Button BorderBrush="{x:Null}" Background="{x:Null}" Height="192" Width="192" Canvas.Left="10" Canvas.Top="17" Click="Quitbtn">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="100"/>
                </Style>
            </Button.Resources>
            <Image Source="/Images/Quit.png" Height="188" Width="188" />
        </Button>
        <Image Height="424" Canvas.Left="10" Stretch="Fill" Source="Images/Nijntje.png" Canvas.Top="606" Width="522"/>
        <Image Height="578" Canvas.Left="1481" Stretch="Fill" Source="Images/ballon.png" Canvas.Top="330" Width="314"/>
    </Canvas>
</Window>

    