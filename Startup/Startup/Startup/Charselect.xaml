<Window x:Class="Startup.Charselect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Startup"
        mc:Ignorable="d"
        Title="Window1" WindowState="Maximized" Height="450" Width="800" Background="Beige">
    <Grid>
        <Button Click="SpelerNaam" HorizontalAlignment="Center" VerticalAlignment="Top">Vul hier de spelernamen in</Button>
        <Button Click="BtnNijntjeGeel" HorizontalAlignment="Left" VerticalAlignment="Center" Width="400" Height="435">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="370" Width="320">
                <Image Source="Images/Nijntje png.jpg" Height="370" Width="320" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Click="BtnNijntjeRood" HorizontalAlignment="Right" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="435">
                <Image Source="Images/Nijntje png.jpg" Height="370" Width="320" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
